<Window x:Class="WPF_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="76.76"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Margin="10,10,10,10" Grid.Row="0" Grid.Column="0" BorderBrush="Blue" BorderThickness="4">
            <Image x:Name="img"></Image>
        </Border>
        <Border Margin="10,10,20,10" Padding="3" Grid.Row="1" Grid.Column="0" BorderBrush="Red" BorderThickness="4">
            <TextBlock x:Name="tb"/>
        </Border>
        
    </Grid>
</Window>
